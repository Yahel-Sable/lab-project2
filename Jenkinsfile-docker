pipeline {
  agent any

  tools {
    // Make sure this matches the name you configured in Manage Jenkins â†’ Global Tool Configuration
    maven 'Maven 3.8.7'
  }

  stages {
    stage('Package Only') {
      steps {
        // 1) Checkout your code from GitHub
        checkout scm

        // 2) Build the WAR without running tests
        sh 'mvn clean package -DskipTests'
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          // 3) Build & tag the Docker image using your Docker Hub namespace
          docker.build("yahelsable/app:${env.BUILD_NUMBER}", "-f Dockerfile .")
        }
      }
    }

    stage('Push to Docker Hub') {
      steps {
        script {
          // 4) Authenticate & push both the version tag and "latest"
          docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-creds') {
            def img = docker.image("yahelsable/app:${env.BUILD_NUMBER}")
            img.push()           // push the build-specific tag
            img.push('latest')   // push the "latest" tag
          }
        }
      }
    }
  }

  post {
    success {
      echo "Docker build & push completed for build ${env.BUILD_NUMBER}"
    }
    failure {
      echo "Pipeline failed. Check the logs above for details."
    }
  }
}
