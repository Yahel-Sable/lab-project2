\pipeline {
  agent any
  tools { maven 'Maven 3.8.7' }
  stages {
    stage('Package Only') {
      steps {
        checkout scm
        sh 'mvn clean package -DskipTests'
      }
    }
    stage('Build Docker Image') {
      steps {
        script {
          // Build the image as yahelsable/app:<build-number>
          docker.build("yahelsable/app:${env.BUILD_NUMBER}", "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          // Log in and push to your namespace
          docker.withRegistry('https://registry.hub.docker.com', 'dockerhubâ€‘creds') {
            def img = docker.image("yahelsable/app:${env.BUILD_NUMBER}")
            img.push()           // push the versioned tag
            img.push('latest')   // push the latest tag
          }
        }
      }
    }
  }
}
