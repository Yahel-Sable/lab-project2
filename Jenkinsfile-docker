pipeline {
  agent any
  tools { maven 'Maven 3.8.7' }            // or whatever your Maven is called
  stages {
    stage('Package Only') {
      steps {
        checkout scm
        // Skip tests for speedâ€”keep your original pipeline intact
        sh 'mvn clean package -DskipTests'
      }
    }
    stage('Build Docker Image') {
      steps {
        script {
          docker.build("xyztech/app:${env.BUILD_NUMBER}", "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-creds') {
            docker.image("xyztech/app:${env.BUILD_NUMBER}").push()
            docker.image("xyztech/app:${env.BUILD_NUMBER}").push('latest')
          }
        }
      }
    }
  }
}
